.wrapper
  = render "side_bar"
  = render "main_chat"
.header


.side-bar
  .side-bar__user-name


    .side-bar__user-name__top-items
      
      %p.side-bar__user-name__top-items__name
        masa
      %ul.side-bar__user-name__top-items__icons
        %li.side-bar__user-name__top-items__edit
          =link_to "#" do
            =icon('fas','edit')
        %li.side-bar__user-name__top-items__cog   
          =link_to "#" do
            =icon('fas','cog')
      

  .side-bar__group
    =link_to "#",class:"side-bar__group__list" do
      .side-bar__group__list
        %p.side-bar__group__list__name
          techcamp
        %p.side-bar__group__list__message
          まだメッセージがありません









.chat-main
  .chat-main__message-info
    .chat-main__message-info__group
      %p.chat-main__message-info__group__text
        test
      %p.chat-main__message-info__group__member
        member:masa
    .chat-main__message-info__edit
      =link_to "#" do
        Edit

  .chat-main__message-list
    .chat-main__message-list__one
      %p.chat-main__message-list__one__name
        masa
      %p.chat-main__message-list__one__date
        2019/11/20(Wed) 17:43:01
    .chat-main__message-list__text
      おはよう！
    .chat-main__message-list__two
      %p.chat-main__message-list__two__names
        masa
      %p.chat-main__message-list__two__dates
        2019/11/20(Wed) 17:43:34
    .chat-main__message-list__texts
      今日は夜から雨


  .chat-main__message-form
    %form.new_message
      .input-box
        %input{type:"text",class:"input-box__text",placeholder:"type a message"}
        %label{class: "input-box__image"}
          = icon('fas', 'image')
          %input{type: "file",class:"input-box__image__file"}
      %input{type:"submit",class:"submit-btn",value:"Send"}
